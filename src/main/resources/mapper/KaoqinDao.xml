    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.KaoqinVO" >
		SELECT * FROM kaoqin  kaoqin         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.KaoqinVO" >
		SELECT  kaoqin.* FROM kaoqin  kaoqin 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.KaoqinView" >

		SELECT  kaoqin.* FROM kaoqin  kaoqin 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.KaoqinView" >
		SELECT * FROM kaoqin  kaoqin <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
</mapper>